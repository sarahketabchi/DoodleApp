<div class="comment">
  <p><%= comment.body %></p>
  <div class="author-name">
    by <%= link_to comment.user.email, user_path(comment.user) %>
    <%= time_ago_in_words(comment.created_at) %> ago
  </div>

  <% if comment.user.id == current_user.id %>
    <div class="delete-comment" data-comment-id="<%= comment.id %>">
      Delete comment
    </div>
  <% end %>
</div>