<!DOCTYPE html>
<html>
  <head>
    <title>DoodleApp</title>
    <%= stylesheet_link_tag    "application", :media => "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
  </head>

  <body>
    <%= render 'layouts/header' %>

    <% flash.each do |key, message| %>
      <p><%= "#{key.upcase}: #{message}" %></p>
    <% end %>

    <%= yield %>

  </body>
</html>
